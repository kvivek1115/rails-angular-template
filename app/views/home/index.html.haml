%h1 Home#index
%p Find me in app/views/home/index.html.haml
{{test}}

%div{'ng-repeat'=> "post in posts | orderBy: '-upvotes'"}
  %span{'ng-click'=>"incrementUpvotes(post)"} ^
  %a{'ng-show'=>"post.link", 'href'=>"{{post.link}}"} {{post.title}}
  %span{'ng-hide'=>"post.link"} {{post.title}}
  upvotes : {{post.upvotes}}

%form{'ng-submit'=>"addPost()"}
  %input{'type'=> "text",'placeholder'=> 'Title','ng-model'=>"title"}
  %br
  %input{'type'=> "text",'placeholder'=> 'Link','ng-model'=>"link"}
  %br
  %button{'type'=>"submit"} Post